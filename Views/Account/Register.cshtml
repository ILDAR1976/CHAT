@model Chat.Models.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>Регистрация на сайте</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" /><br />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" /><br />
        </div>
        <div class="form-group">
            <label asp-for="MQM">Введите максимальное количество сообщений</label><br />
            <input asp-for="MQM" />
            <span asp-validation-for="MQM" /><br />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Сохранить и выйти" class="btn" />
        </div>
    </div>
</form>